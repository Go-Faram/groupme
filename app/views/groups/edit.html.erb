<div class="span12">
  <%= simple_form_for @group do |f| %>
      <%= f.input :title, :input_html => {:class => "input_xxlarge"} %>
      <%= f.input :description, :input_html => {:class => "input_xxlarge"} %>
      <div class="form_actions">
        <%= f.submit "Submit", :disable_with => "Submiting...", :input_html => {:class => "btn btn_primary"} %>
      </div>
  <% end %>
</div>